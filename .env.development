# DataPlane Agent Configuration - Development Environment
# Copy this file to .env and set your values

# Application Configuration
APP_NAME=DataPlane Agent
APP_VERSION=1.0.0
DEBUG=true

# Server Configuration (Agent itself)
SERVER_ID=dataplane-agent-dev-001
SERVER_REGION=us-east-1
SERVER_HOST=0.0.0.0
SERVER_PORT=8010

# DataPlane Server Configuration (The server this agent manages)
DATAPLANE_HOST=localhost
DATAPLANE_PORT=8000

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_password
REDIS_DB=0
REDIS_SOCKET_TIMEOUT=30
REDIS_RETRY_ON_TIMEOUT=true
REDIS_MAX_CONNECTIONS=10

# Redis Queue Names
USAGE_RECORDS_QUEUE=queue:usage_records
SESSION_LIFECYCLE_QUEUE=queue:session_lifecycle
QUOTA_REFRESH_QUEUE=queue:quota_refresh
QUOTA_RESPONSE_QUEUE=queue:quota_response
DEAD_LETTER_QUEUE=queue:dead_letter

# ControlPlane Configuration
CONTROL_PLANE_URL=http://localhost:8080
CONTROL_PLANE_API_KEY=dev_api_key_here
CONTROL_PLANE_HEALTH_CHECK_ENABLED=true
CONTROL_PLANE_TIMEOUT=30
CONTROL_PLANE_RETRY_ATTEMPTS=3
CONTROL_PLANE_RETRY_BACKOFF_FACTOR=2.0
JWT_PUBLIC_KEYS_CACHE_TTL=3600

# Monitoring Configuration
HEARTBEAT_INTERVAL=30
METRICS_PORT=9090
HEALTH_CHECK_PORT=8081
LOG_LEVEL=DEBUG
LOG_RETENTION_DAYS=3
COMMAND_POLL_INTERVAL=30
COMMAND_CACHE_TTL=3600

# Circuit Breaker Configuration
CONTROL_PLANE_MAX_BACKOFF=60
CONTROL_PLANE_ERROR_BACKOFF_MULTIPLIER=2.0
CONTROL_PLANE_INITIAL_ERROR_DELAY=2
CONTROL_PLANE_HEALTH_CHECK_INTERVAL=60

# Security Configuration
ENABLE_TLS=false
JWT_ALGORITHM=RS256
API_KEY_HEADER=X-API-Key
TRUSTED_IPS=127.0.0.1,localhost